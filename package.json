{
  "engines": {
    "node": ">=16",
    "yarn": "3"
  },
  "packageManager": "yarn@3.2.3",
  "name": "@outpost-platform/scout-monorepo",
  "private": true,
  "description": "Monorepo for Scout. A simple API-driven front-end for service directories, part of the Outpost platform.",
  "author": "TPXImpact <fg-support@tpximpact.com>",
  "homepage": "https://outpost-platform.wearefuturegov.com/docs/scout",
  "license": "Apache",
  "scripts": {
    "dev-all": "yarn workspaces foreach run dev",
    "build-all": "yarn workspaces foreach run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wearefuturegov/scout-x"
  },
  "bugs": {
    "url": "https://github.com/wearefuturegov/scout-x/issues"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*"
    ]
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
